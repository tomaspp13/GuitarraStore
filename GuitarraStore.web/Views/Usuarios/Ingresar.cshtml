@{
    ViewData["Title"] = "Iniciar sesion";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>

            <form id="ingresar_usuario" class="p-4 rounded shadow bg-dark text-white">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control bg-dark text-white" id="email" placeholder="Ingrese email" required>
                </div>

                <div class="mb-3">
                    <label for="contraseña" class="form-label">Contraseña</label>
                    <input type="password" class="form-control bg-dark text-white" id="contraseña" placeholder="Ingrese contraseña" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Aceptar</button>

                <p class="mt-3 text-center">
                    ¿No tiene cuenta?
                    <a asp-controller="Usuarios" asp-action="Registrar" class="text-decoration-none text-primary">
                        Ingrese aquí
                    </a>
                </p>
            </form>
        </div>

        <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
            <div id="toastMensaje" class="toast align-items-center text-white bg-success border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body" id="toastTexto">
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>

    </div>

</div>





@section Scripts {
 <script type="module" src="/js/UsuarioMain.js"></script> <script type="module" src="/js/main.js"></script>
}