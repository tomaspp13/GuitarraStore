@{
    ViewData["Title"] = "Manejo de datos";
}

<body>

    <h2>Ingreso de guitarra</h2>

    <form id="formulario" enctype="multipart/form-data">

        <div class="mb-3">

            <label for="marca" class="form-label">Marca:</label>
            <input type="text" id="marca" class="form-control bg-dark text-white" required>

        </div>
        
        <div class="mb-3">

            <label for="modelo" class="form-label">Modelo:</label>
            <input type="text" id="modelo" class="form-control bg-dark text-white" required>

        </div>
        
        <div class="mb-3">

            <label for="descripcion" class="form-label">Descripcion:</label>
            <input type="text" id="descripcion" class="form-control bg-dark text-white" maxlength="1000">

        </div>

        <div class="mb-3">

            <label for="precio" class="form-label">Precio:</label>
            <input type="text" id="precio" class="form-control bg-dark text-white" required>

        </div>

        <div class="mb-3">

            <label for="stock" class="form-label">Stock:</label>
            <input type="number" id="stock" class="form-control bg-dark text-white" required>

        </div>

        <div class="mb-3">

            <label for="Genero" class="form-label">Genero:</label>
            <select id="Genero" class="form-control bg-dark text-white">
                <option value="rock">Rock</option>
                <option value="metal">Metal</option>
                <option value="pop">Pop</option>
                <option value="jazz">Jazz</option>
            </select>

        </div>

        <div class="form-check mb-3">
            <input type="checkbox" id="MasVendido" class="form-check-input bg-dark text-white">
            <label for="MasVendido" class="form-check-label">Es más vendido</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" id="EstaEnOferta" class="form-check-input bg-dark text-white">
            <label for="EstaEnOferta" class="form-check-label">En oferta</label>
        </div>

        <div class="mb-3">
            <label for="imagen" class="form-label ">Imagen:</label>  
            <input type="file" id="imagen" class="form-control bg-dark text-white" accept="image/*" required>
        </div>
        
        <button type="submit" class="bg-dark text-white" id="crearGuitarra">Crear Guitarra</button>

    </form>
 
    <script type="module" src="/js/main.js" asp-append-version="true" defer></script>
</body>