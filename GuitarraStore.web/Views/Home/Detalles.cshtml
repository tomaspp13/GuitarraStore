
@{
    ViewData["Title"] = "Detalles";
}

<body>



    <div style="text-align:center;">
        <h2>Detalles</h2>
    </div>

    <div id="contenedorDetalles" class="container my-4">
        <div class="row mb-4">

            <div class="col-sm-6">

                <img id="imagenGuitarraDetalle" src="" alt="" fetchpriority="high" width="600" height="400" class="img-detalle">

            </div>

            <div class="col-sm-6 d-flex flex-column text-center">

                <div class="contenedorPresentador" style="font-family: Poppins, sans-serif;">
                    <h3 id="marca"></h3>
                    <h3 id="modelo"></h3>
                    <p id="precio"></p>
                    <p id="3cuotas"></p>
                    <p id="6cuotas"></p>
                    <p id="12cuotas"></p>
                </div>

                <div class="contenedorDescripcion" style="font-family: Montserrat, sans-serif;">

                    <div class="contenidoInterno">
                        <p id="descripcionDetalles"></p>

                        <iframe id="videoGuitarra"
                                src=""
                                title="Video guitarra"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>

                    </div>

                </div>

            </div>

        </div>

        <div class="contenedorComentarios">

            <div id="contenedorCom"></div>

            <div id="contenedorOpinion">
                
            </div>

        </div>

    </div>

    <div style="margin-top:30px "><a asp-controller="Home" asp-action="GuitarrasCrud" class="btn btn-primary" id="volverAlCrud">Volver a la lista</a></div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        <div id="toastMensaje" class="toast align-items-center text-white bg-success border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="toastTexto">
                    
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>

    <script type="module" src="/js/main.js" asp-append-version="true" defer>

    </script>

</body>


